{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
